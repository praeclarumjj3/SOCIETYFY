<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Fragments.ProfileFragment">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Fragments.ProfileFragment"
    android:orientation="vertical"
    android:background="#fcfcfc">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#07b892"
        android:textStyle="italic"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginBottom="10dp"
        android:text="THIS IS ME!!!"
        android:textAllCaps="true"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:textSize="20sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_photo"
        android:layout_gravity="center_horizontal"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="10dp"
        android:contentDescription="Navigation_Header"
        android:src="@drawable/userpic"
        android:textAlignment="center"
        app:civ_border_color="#0a16ff"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/profile_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:text="@string/nav_header_title"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#000" />

    <TextView
        android:id="@+id/profile_user_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:textSize="20sp"
        android:text="@string/nav_header_subtitle"
        android:textColor="#000" />


    <TextView
        android:id="@+id/profile_user_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingTop="8dp"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="15sp" />

    <Button
        android:id="@+id/update"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@drawable/reg_btnstyle"
        android:inputType="textMultiLine"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:text="Update"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <ProgressBar
        android:id="@+id/profile_progress"
        android:layout_marginTop="10dp"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:indeterminateTint="#0a16ff"
        android:progressTint="#0a16ff" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="15sp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:text="Note: Tap On the Image to Update it"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="#888888" />




</LinearLayout>
</ScrollView>